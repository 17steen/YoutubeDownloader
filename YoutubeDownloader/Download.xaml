<UserControl x:Class="YoutubeDownloader.Download"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Width="100" x:Name="DownloadName">Lorem ipsum</Label>
                <ProgressBar x:Name="ProgressBar" Value="0" Maximum="1" Minimum="0" MinWidth="80" MinHeight="20"></ProgressBar>
            </StackPanel>
        <Button Click="ClearButton_Click" x:Name="ClearButton">❌</Button>
        </StackPanel>
</UserControl>
