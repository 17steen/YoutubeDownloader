<UserControl x:Class="YoutubeDownloader.SearchResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
         <Button x:Name="Button" Width="500" HorizontalAlignment="Left" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Image HorizontalAlignment="Left" x:Name="ThumnailContainer" Height="50" />
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Label x:Name="VideoTitleLabel" FontSize="14">Sample Title</Label>
                <Label x:Name="VideoAuthorLabel" FontSize="12" FontStyle="Italic">Sample Author</Label>
            </StackPanel>
        </StackPanel>
    </Button>

</UserControl>
